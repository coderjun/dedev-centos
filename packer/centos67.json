{
  "variables": {
    "cleanup_pause": "",
    "headless": "",
    "iso_path": "iso/CentOS-6.7-x86_64-minimal.iso",
    "iso_url": "http://centos.firehosted.com/6.7/isos/x86_64/CentOS-6.7-x86_64-minimal.iso",
    "iso_checksum_type": "md5",
    "iso_checksum": "9381a24b8bee2fed0c26896141a64b69",
    "hostname": "vagrant",
    "ssh_username": "root",
    "ssh_password": "vagrant",
    "version": "0.1.0"
  },
  "builders": [
    {
      "type"                 : "vmware-iso",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort}}/ks.cfg<enter><wait>"
      ],
      "boot_wait"            : "10s",
      "ssh_wait_timeout"     : "10000s",
      "http_directory"       : "http",
      "iso_urls": [
        "{{ user `iso_path` }}",
        "{{ user `iso_url` }}"
      ],      
      "iso_checksum"         : "{{user `iso_checksum`}}",
      "iso_checksum_type"    : "{{user `iso_checksum_type`}}",
      "shutdown_command"     : "/sbin/halt -h -p",
      "ssh_username"         : "{{user `ssh_username`}}",
      "ssh_password"         : "{{user `ssh_password`}}",
      "ssh_port"             : 22
    }
  ],
  "provisioners": [
  ],
  "post-processors": [
    {
      "keep_input_artifact": false,
      "output": "box/centos67-{{user `version`}}.box",
      "type": "vagrant"
    }
  ]
}
